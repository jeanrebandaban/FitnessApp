<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="290dp"
                android:layout_height="100dp"
                android:layout_marginStart="60dp"
                android:paddingTop="10dp"
                android:background="@color/black"
                android:text="@string/tv_coach"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/iv_coach1"
                android:layout_width="290dp"
                android:layout_height="203dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:contentDescription="@string/iv_coach1"
                app:srcCompat="@drawable/img_coach1" />


            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:text="@string/tv_coach1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/iv_coach2"
                android:layout_width="290dp"
                android:layout_height="208dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:contentDescription="@string/iv_coach2"
                app:srcCompat="@drawable/img_coach2" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="26dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:text="@string/tv_coach2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_coach3"
                android:layout_width="290dp"
                android:layout_height="172dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:contentDescription="@string/iv_coach3"
                app:srcCompat="@drawable/img_coach3" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="27dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:text="@string/tv_coach3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_coach4"
                android:layout_width="290dp"
                android:layout_height="162dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:contentDescription="@string/iv_coach4"
                app:srcCompat="@drawable/img_coach4"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="29dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:text="@string/tv_coach4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_coach5"
                android:layout_width="290dp"
                android:layout_height="193dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:contentDescription="@string/iv_coach5"
                app:srcCompat="@drawable/img_coach5" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="28dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:text="@string/tv_coach5"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_coach6"
                android:layout_width="290dp"
                android:layout_height="159dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:contentDescription="@string/iv_coach6"
                app:srcCompat="@drawable/img_coach6" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="34dp"
                android:layout_marginStart="60dp"
                android:background="@color/black"
                android:text="@string/tv_coach6"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>